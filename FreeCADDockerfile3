# syntax=docker/dockerfile:1.2
FROM ubuntu:20.04

CMD ["/bin/bash"]

WORKDIR /tmp

# start with more uptodate packages
RUN apt-get update \
    && apt-get -y --no-install-recommends install software-properties-common wget curl \
    && add-apt-repository ppa:deadsnakes/ppa -y \
    && apt update \
    && apt-get -y --no-install-recommends install python3.9 python3.9-distutils\
    && update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.9 1 \
    && curl https://bootstrap.pypa.io/get-pip.py -o get-pip.py  \
    && python3.9 get-pip.py \
    && rm -rf /var/lib/apt/lists/*

#COPY resources/FreeCAD_weekly-builds-27078-Linux-Conda_glibc2.12-x86_64.AppImage FC.AppImage
RUN wget https://github.com/FreeCAD/FreeCAD-Bundle/releases/download/weekly-builds/FreeCAD_weekly-builds-27078-Linux-Conda_glibc2.12-x86_64.AppImage \
    && chmod +x FreeCAD_weekly-builds-27078-Linux-Conda_glibc2.12-x86_64.AppImage \
    && ./FreeCAD_weekly-builds-27078-Linux-Conda_glibc2.12-x86_64.AppImage --appimage-extract \
    && rm FreeCAD_weekly-builds-27078-Linux-Conda_glibc2.12-x86_64.AppImage

ENV PYTHONPATH "${PYTHONPATH}:/tmp/squashfs-root/usr/lib/python3.9/site-packages/:/tmp/squashfs-root/usr/lib/"

RUN apt-get update
RUN apt-get -y --no-install-recommends install libgl1-mesa-glx libxcursor1 libxft2 libxinerama1 libglu1-mesa libgomp1
RUN pip3 install gmsh

